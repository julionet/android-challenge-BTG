<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description_poster"
            android:id="@+id/image_view_poster_filme"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:id="@+id/text_view_nome_filme"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/text_view_ano_filme"
                android:textSize="16sp"
                android:textColor="@color/colorBlack" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="start"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:src="@drawable/ic_action_unfavorite"
                android:contentDescription="@string/content_description_poster"
                android:id="@+id/image_view_favorito"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>